{

    "manifest_version": 2,
    "name": "OmniAI",
    "version": "1.0",

    "description": "Stop copy-pasting your AI api-keys, use Omni.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_ui": {"page":"options.html"},
    "content_scripts": [
        {
        "js": ["index.js"],
        "matches": ["<all_urls>"]
        }
    ],
    "homepage_url": "https://github.com/velocitatem/omni"
}
