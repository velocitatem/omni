{

    "manifest_version": 2,
    "name": "OmniAI",
    "version": "1.0",

    "description": "Adds a red border to all webpages matching mozilla.org.",

    "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe-eval';",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_ui": {"page":"options.html"},
    "content_scripts": [
        {
        "js": ["index.js"],
        "matches": ["<all_urls>"]
        }
    ]

}
